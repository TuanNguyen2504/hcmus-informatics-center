extends ./template/general.pug

block style
  link(rel="stylesheet" type="text/css" href="/styles/css/header.css" )
  link(rel="stylesheet" type="text/css" href="/styles/css/opening-schedule.css" )

block content
  .us-wrapper
    include ./mixin/header.pug
    +header

    //- slider
    #slider.carousel.slide(data-ride="carousel" data-interval="3000")
      ol.carousel-indicators
        each val in [1, 2, 3, 4, 5, 6]
          if(val === 1)
            li.active(data-target="#slider" data-slide-to=val)
          else 
            li(data-target="#slider" data-slide-to=val)

      .carousel-inner
        each val in [1, 2, 3, 4, 5, 6]
          if(val === 1)
            .carousel-item.active
              img.d-block.w-100(src=`/assets/images/sliders/${val}.png` alt="Slide")
          else
            .carousel-item
              img.d-block.w-100(src=`/assets/images/sliders/${val}.png` alt="Slide")

    //- opening schedule
    .container
      h1.us-title.my-4 Lịch khai giảng các khoá học
      .card.course
        .course-header.card-header.flex-center-between(data-toggle='collapse' data-target='#collapse_1' aria-expanded='true' aria-controls='collapse_1')
          h2.course-title chuyên viên thiết kế website
          i.course-icon.fal.fa-chevron-circle-down
        #collapse_1.collapse.hide
          .card-body.course-content
            h3.sub-title [New] chuyên viên thiết kế website ~ #[span 12 tháng]
            b Học phí trọn khoá: #[strike 23.500.000 VNĐ] #[br]
            strong Ưu đãi học phí chỉ còn 18.000.000Đ #[b khi đăng ký online và hoàn tất học phí trước ] 
            | #[strong ngày 18/6/2021]
            p.course-desc  Dành cho người mới bắt đầu, Khóa 267 (KG 21/06/2021) sẽ học trực tuyến với giảng viên 100% đến khi có thông báo mới
            table.table.table-striped.table-bordered.my-4
              thead
                tr.table-primary
                  th(scope='col') #[b Lớp]
                  th(scope='col') #[b Thời gian học]
                  th(scope='col') #[b Ngày khai giảng]
                  th(scope='col') #[b Địa điểm học]
                  th(scope='col') #[b Đã đăng ký]
                  th(scope='col') 
              tbody
                tr
                  td DVLQ_102
                  td Thứ 2 - 4 - 6 (8h - 10H)
                  td 21/6/2021
                  td Online
                  td 25
                  td.text-center
                    a(href="#")
                      button.btn.btn-primary  Đăng ký
                
           

block script 
  script(src="/scripts/header.js") 
  script(src="/scripts/opening-schedule.js") 